# ==================== SERVER CONFIGURATION ====================
# Port for the backend server
PORT=5000

# Node environment (development, production, test)
NODE_ENV=development

# ==================== DATABASE ====================
# MongoDB connection string
MONGODB_URI=mongodb+srv://rudazy:1234luda@cluster0.zlxkubb.mongodb.net/?appName=Cluster0

# ==================== FRONTEND ====================
# Frontend URL for CORS (use * for allow all, or specific URL)
FRONTEND_URL=http://localhost:3000

# ==================== JWT AUTHENTICATION (Optional) ====================
# JWT secret for token generation (if implementing JWT auth)
JWT_SECRET=your_jwt_secret_here_change_in_production

# JWT expiration time
JWT_EXPIRES_IN=7d

# ==================== RATE LIMITING ====================
# Rate limit window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW=900000

# Max requests per window per IP
RATE_LIMIT_MAX=100

# ==================== TASK RESET ====================
# Cron schedule for daily task reset (default: 00:00 UTC)
TASK_RESET_CRON=0 0 * * *

# ==================== LOGGING ====================
# Enable debug logs
DEBUG=false

# ==================== EXTERNAL APIS (Optional) ====================
# Twitter API credentials (for social task verification)
TWITTER_API_KEY=
TWITTER_API_SECRET=

# Telegram Bot Token (for social task verification)
TELEGRAM_BOT_TOKEN=

# Discord Bot Token (for social task verification)
